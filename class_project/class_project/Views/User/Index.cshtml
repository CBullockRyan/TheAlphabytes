@model IEnumerable<class_project.Models.ApplicationUser>
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Delete or Promote Users";
}

<br />
<div class="container-fluid pt-md-2">
    <div class="row justify-content-center">
        <div class="col-sm-6">
            <div class="card">
                <h2 class="card-header text-center">@ViewBag.Title</h2>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th>@Html.DisplayName("Email")</th>
                            <th></th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @if (!(item.Id == User.Identity.GetUserId()))
                                {
                                    <td>@Html.DisplayFor(model => item.Email)</td>
                                    <td>@Html.ActionLink("Delete Account", "Delete", new { id = item.Id })</td>
                                    <td>@Html.ActionLink("Promote to Admin", "Promote", new { id = item.Id })</td>
                                }
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

