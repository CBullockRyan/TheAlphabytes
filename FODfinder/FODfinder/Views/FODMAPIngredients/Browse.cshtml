@model IEnumerable<FODfinder.Models.FODMAPIngredient>

@{
    ViewBag.Title = "Browse FODMAPs";
}

    <div class="container-fluid pt-4">
        <h2 class="display-4 pt-3 text-center">Browse FODMAP Ingredients</h2>
        <hr />
        <div class="row justify-content-center">
            <div class="col-sm-8">
                <table class="table text-muted">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Aliases)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Aliases)
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>