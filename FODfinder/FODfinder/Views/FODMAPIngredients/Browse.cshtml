@model IEnumerable<FODfinder.Models.FODMAPIngredient>

@{
    ViewBag.Title = "Index";
}
    <div class="container-fluid pt-4">
        <h2>Common FODMAP Ingredients</h2>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aliases)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aliases)
                    </td>
                </tr>
            }

        </table>
    </div>