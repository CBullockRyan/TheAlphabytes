<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - FODfinder</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("FODfinder", "Index", "Home", null, new { @class = "navbar-brand font-weight-bold", id = "NavbarLogo" })
                <div class="navbar-collapse collapse" id="navbarSupportedContent">
                    <div>
                        <ul class="nav navbar-nav">
                            <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("What's a FODMAP?", "Index", "FodmapInfo", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Browse FODMAP Ingredients", "Browse", "FODMAPIngredients", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Food Search", "Index", "Food", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Ingredient Search", "Search", "FODMAPIngredients", null, new { @class = "nav-link" })</li>
                        </ul>
                    </div>
                    @*@Html.Partial("_LoginPartial")*@
                </div>
            </div>
        </nav>
        <div class="container-fluid">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-10">
                    @RenderBody()
                    <hr />
                    <footer class="text-center">
                        <p>FODfinder &copy; @DateTime.Now.Year - The Alphabytes</p>
                    </footer>
                </div>
            </div>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>