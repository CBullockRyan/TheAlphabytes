@model FODfinder.Models.FODMAPIngredient
@{
    ViewBag.Title = "Add a High FODMAP Food";
}


<div class="container-fluid pt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-secondary text-gray text-center">
                    <h2>Add a High FODMAP Food</h2>
                </div>
                <div class="card-body d-flex justify-content-center">
                    <div class="container-fluid">
                        @using (Html.BeginForm("AddFodmap", "Admin", FormMethod.Post, new { @class = "container-fluid p-1", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text text-gray bg-secondary">
                                            @Html.LabelFor(m => m.Name, new { id = "RegisterFormLabel" })
                                        </div>
                                    </div>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text text-gray bg-secondary">
                                            @Html.LabelFor(m => m.Aliases, new { id = "RegisterFormLabel" })
                                        </div>
                                    </div>
                                    @Html.TextBoxFor(m => m.Aliases, new { @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Aliases, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="submit" class="btn btn-primary mx-auto w-75" value="Add FODMAP" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="row justify-content-center pb-2">
                    <p class="text-success">@ViewBag.StatusMessage</p>
                </div>
            </div>
        </div>
    </div>
</div>
