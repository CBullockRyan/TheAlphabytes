@model FODfinder.Models.ApplicationUser
@{
    ViewBag.Title = "Delete User";
}

<div class="container-fluid pt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-secondary text-gray text-center">
                    <h4>Delete User</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.HiddenFor(model => model.Id)
                        <h4 class="p-2">Are you sure you want to permanently delete @Html.DisplayFor(model => model.UserName)'s account?</h4>
                        <button type="submit" class="btn btn-danger p-2">Permanently Delete</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

