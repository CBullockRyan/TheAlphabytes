@using FODfinder.Models
@model LoginViewModel
@{
    ViewBag.Title = "Sign in";
}

<div class="container-fluid pt-4">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white text-center">
                    <h4>Sign in</h4>
                </div>
                <div class="card-body d-flex justify-content-center">
                    <section class="container-fluid" id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "container-fluid p-1", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text text-white bg-secondary">
                                            @Html.LabelFor(m => m.Email, new { id = "LoginFormLabel" })
                                        </div>
                                    </div>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "example@email.com" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text text-white bg-secondary">
                                            @Html.LabelFor(m => m.Password, new { id = "LoginFormLabel" })
                                        </div>
                                    </div>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Your password..." })
                                </div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <div class="row justify-content-center text-center pt-2">
                                    <div class="col-md-10">
                                        <input type="submit" value="Sign in" class="btn btn-secondary w-100" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row justify-content-center text-center" >
                                    <div class="col-md-10">
                                        <div class="checkbox">
                                            @Html.CheckBoxFor(m => m.RememberMe)
                                            @Html.LabelFor(m => m.RememberMe)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center text-center">
                                <p>
                                    @Html.ActionLink("Don't have an account? Register", "Register")
                                </p>
                            </div>
                            @* Enable this once you have account confirmation enabled for password reset functionality
                <p>
                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                </p>*@
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}