@model IEnumerable<FODfinder.Models.UserList>

@{
    ViewBag.Title = "My Lists";
}

<div class="container-fluid pt-5 pb-5 rounded bg-secondary">
    <div class="row justify-content-center">
        <h1 class="text-gray">My Lists</h1>
    </div>
    <div class="container pt-2">
        <div class="list-group">
            <div class="list-group-item bg-secondary">
                <div class="row text-gray justify-content-center h5">
                    @if(Model.Count() == 0)
                    {
                    <div>You haven't created any lists yet</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
