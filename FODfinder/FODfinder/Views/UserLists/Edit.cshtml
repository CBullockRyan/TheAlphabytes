@model FODfinder.Models.UserList

@{
    ViewBag.Title = "Rename";
}

<div class="container-fluid pt-4">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-secondary text-gray text-center">
                    <h4>Rename a List</h4>
                </div>
                <div class="card-body">
                    <div class="container-fluid p-2">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.listID)

                            <input name="userID" type="hidden" value="0">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text text-gray bg-secondary">
                                            <label for="listName" id="ContactFormLabel">New Name</label>
                                        </div>
                                    </div>
                                    @Html.TextBoxFor(model => model.listName, new { @class = "form-control", placeholder = "My List..." })
                                </div>
                                @Html.ValidationMessageFor(model => model.listName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="submit" value="Rename" class="btn btn-light w-75 mx-auto" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
